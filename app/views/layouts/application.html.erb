<!DOCTYPE html>
<html>
  <head>
    <title>Fakebook</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <link rel="icon" 
      type="image/png" 
      href="assets/fakebook_favicon.png">

    <% if current_user %>
      <script>
        window.currentUser = {
          "id": "<%= current_user.id %>",
          "email": "<%= current_user.email %>",
          "first_name": "<%= current_user.first_name %>",
        };
      </script>
    <% end %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
