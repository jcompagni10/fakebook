<!DOCTYPE html>
<html>
  <head>
    <title>Fakebook</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <link rel="icon" 
      type="image/png" 
      href="assets/fakebook_favicon.png">

    <% if current_user %>
      <script>
        window.currentUser = {
          "id": "<%= current_user.id %>",
          "email": "<%= current_user.email %>",
          "first_name": "<%= current_user.first_name %>",
          "profile_img_url": "<%= current_user.profile_img_url %>",
        };
      </script>
    <% end %>
    <script src="//widget.cloudinary.com/global/all.js" type="text/javascript">  
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
